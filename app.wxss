.container {
  min-height: 100%;
  font-family: "pingfang SC", "Microsoft YaHei", "Helvetica Neue", Helvetica, sans-serif;
  /*line-height: 1.5;*/
}

.tab {
  width: 100%;
  border-bottom: 1px solid #eee;
  text-align: center;
  line-height: 2rem;
}

.tab view {
  display: inline-block;
  width: 50%;
}

.tab view.active {
  color: #3eb94e;
  border-bottom: 2px solid #3eb94e;
}


/*song list item*/

.songlist {
  width: 100%;
  overflow-x: hidden;
  overflow-y: hidden;
  font-size: .8rem;
}

.songitem,
.songitem-mini {
  height: 3rem;
  line-height: 1.5rem;
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
  width: 100%;
}

.songitem:active,
.songitem-mini:active {
  background: #eee;
}

.song-play {
  width: 3rem;
  text-align: center;
  vertical-align: middle;
  display: flex;
  align-content: center;
  align-items: center;
}

.song-play image {
  margin: auto;
  display: block;
  width: 80%;
  height: 80%;
}

.song-detail {
  white-space: nowrap;
  width: calc(100% - 3rem);
}

.song-title {
  font-size: 1rem;
}

.song-subtitle {
  color: #555;
}